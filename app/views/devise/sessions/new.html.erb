<div class="row">
 <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, required: false, autofocus: true, class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, required: false, class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="actions form-group">
        <%= f.button :submit, "Log in", class: 'btn btn-success' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

